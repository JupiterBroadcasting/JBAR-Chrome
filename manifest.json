{
  "name": "Jupiter Broadcasting Affiliate Redirect",
  "version": "0.9.1",
  "manifest_version": 2,
  "description": "Redirects links on JB affiliate sites to be tagged with the JB affiliate codes automagically!",
  "page_action" :
  {
    "default_icon" : "icon128.png",
    "default_title" : "With this purchase you are supporting Jupiter Broadcasting!"
  },
  "icons": { "128": "icon128.png" },
  "permissions": [  "webRequest", "webRequestBlocking", 
                      "*://*.amazon.com/*",
                      "*://*.amazon.co.uk/*",
                      "*://*.amazon.de/*",
                      "*://*.amazon.ca/*",
                      "*://*.audible.com/*",
                      "*://*.mint.com/*",
                      "*://*.bestbuy.com/*",
                      "*://*.thinkgeek.com/*",
                      "*://*.newegg.com/*",
                      "*://*.newegg.ca/*",
                      "*://*.guitarcenter.com/*",
                      "*://*.woot.com/*",
		      "tabs"
                 ], 
	"background": {
		"scripts": ["background.js"]
  }
}
